<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_content_background"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragment_color"
        android:name="org.almiso.daggerdemo.ui.fragment.ColorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_selector"
        android:name="org.almiso.daggerdemo.ui.fragment.SelectorFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>