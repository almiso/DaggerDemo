<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_content_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.almiso.daggerdemo.ui.activity.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_sample_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/st_sample_simple" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_sample_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/st_multiple_injections" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_sample_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/st_sample_scope" />
</LinearLayout>